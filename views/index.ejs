<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Hamara airbnb</title>
    <link rel="stylesheet" href="/styles/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-500 shadow">
      <nav class="container mx-auto p-4">
        <ul class="flex space-x-4">
          <li>
            <a
              href="/"
              class="bg-white text-blue-500 hover:bg-blue-700 hover:text-white py-2 px-4 rounded"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/host/add-home"
              class="bg-white text-blue-500 hover:bg-blue-700 hover:text-white py-2 px-4 rounded"
              >Add Home</a
            >
          </li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto p-4">
      <h1 class="text-3xl font-bold text-blue-600 mb-4">Welcome to airbnb</h1>
      <div class="flex flex-wrap -mx-4">
        <% homes.forEach(home => { %>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
          <div
            class="bg-white p-4 rounded shadow mb-4 transform transition duration-500 hover:scale-105 hover:shadow-lg"
          >
            <img
              src="<%= home.photoUrl %>"
              alt="<%= home.houseName %>"
              class="w-full h-48 object-cover rounded mb-4"
            />
            <h2 class="text-xl font-semibold mb-2"><%= home.houseName %></h2>
            <p class="text-gray-700 mb-2">
              <i class="fas fa-map-marker-alt"></i> <%= home.location %>
            </p>
            <p class="text-gray-700 mb-2">
              <i class="fas fa-star"></i> <%= home.rating %> stars
            </p>
            <p class="text-gray-700 mb-2">Price: Rs<%= home.price %></p>
            <button
              class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 mt-4"
            >
              Book Now
            </button>
          </div>
        </div>
        <% }); %>
      </div>
    </main>
  </body>
</html>
